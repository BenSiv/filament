# FILAMENT Development Container
# Python 3.12 with all dependencies for cold case analysis

FROM python:3.12-slim-bookworm

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PYTHONPATH=/app/code

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    curl \
    git \
    chromium \
    chromium-driver \
    sqlite3 \
    zstd \
    && rm -rf /var/lib/apt/lists/*

# Install Ollama
RUN curl -fsSL https://ollama.com/install.sh | sh

# Create non-root user
RUN useradd --create-home --shell /bin/bash filament
WORKDIR /app

# Install Python dependencies
COPY code/requirements.txt .
# Install CPU-only PyTorch first to avoid downloading huge CUDA libs
RUN pip install torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cpu
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY --chown=filament:filament . .

# Exposure
EXPOSE 11434 8000

# Copy entrypoint script
COPY --chown=filament:filament code/devenv/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Switch to non-root user for app, but entrypoint handles root for ollama start
ENTRYPOINT ["/entrypoint.sh"]
