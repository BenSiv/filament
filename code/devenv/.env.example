# =============================================================================
# FILAMENT - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=filament
POSTGRES_USER=filament_user
POSTGRES_PASSWORD=your_secure_password_here

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# -----------------------------------------------------------------------------
# LLM Configuration (Ollama)
# -----------------------------------------------------------------------------
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3  # or mistral

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# -----------------------------------------------------------------------------
# Data Source API Keys (if required)
# -----------------------------------------------------------------------------
# BC Data Catalogue API (if applicable)
BC_DATA_API_KEY=

# CanLII API (if using programmatic access)
CANLII_API_KEY=

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Max concurrent requests for scraping
MAX_CONCURRENT_REQUESTS=5

# Vector search similarity threshold (0.0 - 1.0)
SIMILARITY_THRESHOLD=0.75

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
DEBUG=false
TESTING=false
